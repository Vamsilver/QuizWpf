<Page x:Class="QuizWpf.Pages.AddQuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddQuestionPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Введите вопрос:" FontSize="28"/>
            <TextBox x:Name="QuestionTextBox" FontSize="28"/>

            <TextBlock Text="Введите ответ (не больше 40 символов):" FontSize="28"/>
            <TextBox x:Name="AnswerTextBox" FontSize="28"/>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="CreateBtn" Content="Создать" FontSize="28" Margin="0,10,10,0" Click="CreateBtnClick" />
                <Button Content="Назад" FontSize="28" Margin="0,10,10,0" Click="BackClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
