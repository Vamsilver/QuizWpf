<Page x:Class="QuizWpf.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuizWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="PlayBtn" Content="ИГРАТЬ" Margin="0,0,0,10" FontSize="34" Click="PlayBtnClick"></Button>
            <Button x:Name="CreateQuestion" Content="СОЗДАТЬ НОВЫЙ ВОПРОС" FontSize="34" Click="CreateQuestionClick"></Button>
        </StackPanel>
    </Grid>
</Page>
